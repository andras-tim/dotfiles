#!/bin/bash
CONFIG_ORDER='multi_monitor only_dsub notebook_monitor'
DISPLAY=':0.0'


######
# Configurations
#
function config_no_monitor()
{
    for output in eDP-1 DP-1-1 DP-1-2; do
        xrandr --output "${output}" --auto \
            && xrandr --output "${output}" --off \
            || true
    done
}

function config_notebook_monitor()
{
    strict_xrandr \
        --output eDP-1 --crtc 0 --mode 1600x900  --rotate normal --primary \
        || return $?
    echo 'eDP-1'
}

function config_only_dsub()
{
    strict_xrandr \
        --output DP-4 --crtc 0 --mode 1920x1080  --rotate normal --primary \
        || return $?
    echo 'DP-4'
}

function config_multi_monitor()
{
    strict_xrandr \
        --output eDP-1 --off \
        --output DP-1-1 --crtc 1 --mode 1920x1080 --rotate normal --primary \
        --output DP-1-2 --crtc 2 --mode 1920x1080 --rotate normal --right-of DP-1-1 \
        || return $?
    echo 'DP-1-1'
}

function config_multi_monitor_3()
{
    strict_xrandr \
        --output eDP-1 --crtc 0 --mode 1600x900  --rotate normal --left-of DP-1-1 \
        --output DP-1-1 --crtc 1 --mode 1920x1080 --rotate normal --primary \
        --output DP-1-2 --crtc 2 --mode 1920x1080 --rotate normal --right-of DP-1-1 \
        || return $?
    echo 'DP-1-1'
}


######
# Functions
#
function strict_xrandr()
{
    out="$(xrandr --dryrun "$@" 2>&1)" || return $?
    if echo "${out}" | grep -q '^warning:' >/dev/null
    then
        return 1
    fi

    xrandr "$@"
}

function panel_output()
{
    local panel_id="$1"; shift

    xfconf-query -c xfce4-panel -p "/panels/panel-${panel_id}/output-name" "$@"
}

function reload_conky()
{
    killall -SIGUSR1 conky
}

function reset_bightness()
{
    xbacklight -set 40
}

function set_output_of_onscreen_elements()
{
    local output="$1"

    current_output="$(panel_output 0)"
    [ "${current_output}" == "${output}" ] && return

    # Waiting for display ready
    sleep 2

    reset_bightness

    #panel_output 0 -n -t string -s "${output}"
    panel_output 0 -n -t string -s 'monitor-0'
    sleep 1
    xfce4-panel --restart

    # Waiting for desktop ready
    sleep 2

    reload_conky
}


######
# Main
#
if [ "$1" != '--without-reset' ]
then
    config_no_monitor
fi

for name in ${CONFIG_ORDER}
do
    primary="$(config_${name})"
    if [ $? -eq 0 ]
    then
        set_output_of_onscreen_elements "${primary}"
        echo 'Done'
        exit 0
    fi
done

echo 'Error: Can not meet configs with current available monitors'
exit 1
