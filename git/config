[user]
    name = Andras Tim
    email = andras.tim@gmail.com
[gui]
    fontui = -family \"DejaVu Sans\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"DejaVu Sans Mono\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
[guitool "[Edit] Current file"]
    cmd = komodo \"$FILENAME\"
    noconsole = yes
[guitool "[Git] Reset & Clean"]
    cmd = git reset --hard; git clean -df
[guitool "[Git] Commit - Fixup!"]
    cmd = ~/bin/gitgui-fixup.sh
[guitool "[Git] Rebase - to origin-master"]
    cmd = VISUAL=/bin/false git rebase --autosquash origin/master
[guitool "[Git] Rebase - Continue"]
    cmd = VISUAL=/bin/false git rebase --continue
[guitool "[Git] Rebase - Abort"]
    cmd = git rebase --abort
[guitool "[Git] Rebase - Skip"]
    cmd = git rebase --skip
[guitool "[FS] Open parent directory"]
    cmd = thunar \"$(dirname $FILENAME)\"
    needsfile = yes
    noconsole = yes
[difftool "idiff"]
    cmd = diff -ui $LOCAL $REMOTE
[difftool]
    prompt = 0
[color]
    ui = true
